server {
    listen 80;
    server_name cooling.local;
    root /var/www/html/public;
    index index.php index.html index.htm;

    # Logs específicos para Cooling
    access_log /var/log/nginx/cooling_access.log;
    error_log /var/log/nginx/cooling_error.log;

    # Configuración para CodeIgniter 4
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Redireccionar favicon
    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }

    # Denegar acceso a system y app
    location ~ ^/(app|system|tests|writable|vendor) {
        deny all;
        return 403;
    }

    # Archivos estáticos
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Manejo de PHP
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass php:9000;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        
        # Headers para API Cooling
        add_header X-Frame-Options "SAMEORIGIN";
        add_header X-Content-Type-Options "nosniff";
        
        # CORS para API
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization';
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain; charset=utf-8';
            add_header 'Content-Length' 0;
            return 204;
        }
        
        add_header 'Access-Control-Allow-Origin' '*';
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS';
        add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization';
    }

    # Denegar archivos ocultos
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}